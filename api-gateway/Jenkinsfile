        }

        stage('Build API Gateway') {
            steps {
                script {
                    try {
                        echo "Construction de l'image Docker pour API Gateway"
                        dockerImage = docker.build("najwakarrouchi968/api-gateway:latest")
                    } catch (e) {
                        error "Échec de la construction de l'image Docker pour API Gateway"
                    }
                }
            }
        }

        stage('Push API Gateway Image') {
            steps {
                script {
                    try {
                        echo "Poussée de l'image Docker vers DockerHub"
                        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-credentials') {
                            docker.image('najwakarrouchi968/api-gateway:latest').push()
                        }
                    } catch (e) {
                        error "Échec de la poussée de l'image Docker vers DockerHub"
                    }
                }
            }
        }

        stage('Deploy API Gateway') {
            steps {
                script {
                    withCredentials([file(credentialsId: 'kubeconfig-credentials', variable: 'KUBECONFIG')]) {
                        try {
                            echo "Déploiement de l'API Gateway sur Kubernetes"
                            sh 'kubectl apply -f kubernetes/deployment-api-gateway.yaml'
                        } catch (e) {
                            error "Échec du déploiement de l'API Gateway sur Kubernetes"
                        }
                    }
                }
            }
        }
    }
}
