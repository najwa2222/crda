pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/najwa2222/crda.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    dockerImage = docker.build("najwakarrouchi968/views:latest")
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    dockerImage.inside {
                        sh 'npm install'
                        sh 'npm test'
                    }
                }
            }
        }

        stage('Push') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-credentials') {
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh 'kubectl.apply -f /kubernetes/deployment-views.yaml'
                }
            }
        }
    }
}
