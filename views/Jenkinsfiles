pipeline {
    agent any
    
    stages {
        stage('Build views') {
            steps {
                sh 'docker build -t views:latest -f Dockerfile.views .'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}
