pipeline {
    agent any
    
    stages {
        stage('Préparation') {
            steps {
                // Checkout du code depuis le dépôt Git
                git 'https://github.com/najwa2222/crda.git'
                
                // Installation des dépendances Node.js ou autre langue/framework
                sh 'npm install'
            }
        }
        
        stage('Tests') {
            steps {
                // Exécution des tests unitaires et d'intégration
                sh 'npm test'
            }
        }
        
        stage('Construction') {
            steps {
                // Construction de l'application
                sh 'npm run build'
            }
        }
        
        stage('Construction de l\'image Docker') {
            steps {
                // Construction de l'image Docker
                sh 'docker build -t najwakarrouchi968/authentification:latest .'
            }
        }
        
        stage('Pousser vers Docker Hub') {
            steps {
                // Authentification avec Docker Hub
                withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
                }
                
                // Poussement de l'image vers Docker Hub
                sh 'docker push najwakarrouchi968/authentification:latest'
            }
        }
    }
    
    post {
        // Envoi d'une notification par e-mail en cas de succès ou d'échec du pipeline
        success {
            emailext subject: 'Pipeline réussi',
                      body: 'Le pipeline d\'authentification a été exécuté avec succès.',
                      to: 'najwakarrouchi@gmail.com'
        }
        failure {
            emailext subject: 'Échec du pipeline',
                      body: 'Le pipeline d\'authentification a échoué. Veuillez vérifier les logs pour plus de détails.',
                      to: 'najwakarrouchi@gmail.com'
        }
    }
}
