pipeline {
    agent any

    environment {
        PATH = "C:\\Program Files\\Docker\\Docker\\resources\\bin;C:\\Program Files\\nodejs;${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/najwa2222/crda.git'
            }
        }
        stage('Test') {
            steps {
                bat 'npm install' // Ensure to install the project dependencies
            }
        }
        stage('Deploy') {
            steps {
                bat 'docker-compose pull' // Pull the latest images from Docker registry
                bat 'docker-compose up -d'
            }
        }
    }
}
