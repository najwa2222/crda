pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    git 'https://github.com/najwa2222/crda.git'
                    docker.build("najwakarrouchi968/crda")
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub') {
                        docker.image("najwakarrouchi968/crda").push("latest")
                    }
                }
            }
        }
    }
}
