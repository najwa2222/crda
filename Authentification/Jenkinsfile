pipeline {
    agent any

    environment {
        PATH = "C:\\Program Files\\Docker\\Docker\\resources\\bin;C:\\Program Files\\nodejs;${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/najwa2222/crda.git'
            }
        }
        stage('Build Services') {
            steps {
                script {
                    // Vérifiez et imprimez le contenu du répertoire pour le débogage
                    bat 'dir'
                    bat 'docker-compose -f Docker-compose.yml build'
                }
            }
        }
        stage('Test') {
            steps {
                bat 'npm install' // Assurez-vous d'installer les dépendances du projet
            }
        }
        stage('Deploy') {
            steps {
                script {
                    def dockerComposePath = "C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\authentification\\Docker-compose.yml"
                    bat "docker-compose -f ${dockerComposePath} up -d"
                }
            }
        }
    }
}
