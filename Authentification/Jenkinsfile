pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
        
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    def repoUrl = 'https://github.com/najwa2222/crda/authentification.git'
                    try {
                        echo "Clonage du dépôt depuis ${repoUrl}"
                        git url: repoUrl
                    } catch (e) {
                        error "Échec du clonage du dépôt : ${repoUrl}"
                    }
                }
            }
        }

        stage('Build Authentification Service') {
            steps {
                script {
                    try {
                        echo "Construction de l'image Docker pour le service Authentification"
                        dockerImage = docker.build("najwakarrouchi968/authentification:latest")
                    } catch (e) {
                        error "Échec de la construction de l'image Docker pour le service Authentification"
                    }
                }
            }
        }

        stage('Test Authentification Service') {
            steps {
                script {
                    dockerImage.inside {
                        try {
                            sh 'npm install'
                            sh 'npm test'
                        } catch (e) {
                            error "Échec des tests pour le service Authentification"
                        }
                    }
                }
            }
        }

        stage('Push Authentification Image') {
            steps {
                script {
                    try {
                        echo "Poussée de l'image Docker vers DockerHub"
                        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-credentials') {
                            docker.image('najwakarrouchi968/authentification:latest').push()
                        }
                    } catch (e) {
                        error "Échec de la poussée de l'image Docker vers DockerHub"
                    }
                }
            }
        }

        stage('Deploy Authentification Service') {
            steps {
                script {
                    withCredentials([file(credentialsId: 'kubeconfig-credentials', variable: 'KUBECONFIG')]) {
                        try {
                            echo "Déploiement du service Authentification sur Kubernetes"
                            sh 'kubectl apply -f kubernetes/deployment-authentification.yaml'
                        } catch (e) {
                            error "Échec du déploiement du service Authentification sur Kubernetes"
                        }
                    }
                }
            }
        }
    }
}
