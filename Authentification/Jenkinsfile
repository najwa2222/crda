pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/najwa2222/crda.git', credentialsId: 'git-credentials'
            }
        }
        
        stage('Build') {
            steps {
                bat 'npm install' // Installer les d√©pendances
                
            }
        }
        
        stage('Build Docker Image') {
            steps {
                bat 'docker build -t najwakarrouchi968/authentification:latest .' // Construire l'image Docker
            }
        }
        
        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    bat "echo %PASSWORD% | docker login -u %USERNAME% --password-stdin"
                    bat "docker push najwakarrouchi968/authentification:latest" // Pousser l'image Docker vers Docker Hub
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    kubernetesDeploy(
                        configs: 'k8s/auth-deployment.yaml',
                        kubeconfigId: 'kubeconfig'
                    )
                }
            }
        }
    }
}
